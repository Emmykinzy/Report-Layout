
@{
    ViewBag.Title = "ExceptionReportList";
    string val = (string)TempData["val"];
    Report_Layout.Models.Except type = (Report_Layout.Models.Except)TempData["type"];
    Report_Layout.Models.Inequality ineq = (Report_Layout.Models.Inequality)TempData["ineq"];

}
@model IEnumerable<Report_Layout.Models.Trip>
    <div class="content">
        <div id="except">
            <br />
            <h2>Exception Report</h2>
            <h4>@type  @ineq @val</h4>
            <table class="report">
                <tr>
                    <th>
                        @Html.Label("Trip Number")
                    </th>
                    <th>
                        @Html.Label("Driver Number")
                    </th>
                    <th>
                        @Html.Label("Truck Number")
                    </th>
                    <th>
                        @Html.Label("Date Departed")
                    </th>
                    <th>
                        @Html.Label("Date Returned")
                    </th>
                    <th>
                        @Html.Label("Miles Driven")
                    </th>
                    <th>
                        @Html.Label("Gallons Purchased")
                    </th>
                </tr>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.TripNumber
                            </td>
                            <td>
                                @item.DriverNumber
                            </td>
                            <td>
                                @item.TruckNumber
                            </td>
                            <td>
                                @item.DateDeparted.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.DateReturned.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.MilesDriven.ToString()
                            </td>
                            <td>
                                @item.GallonsPurchased.ToString()
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
        <br />
        <br />
        <input type="submit" onclick="Print('except')" value="Print Report" class="btn btn-default">
        <br />
        <br />
        <br />
        <br />
        @Html.ActionLink("Back", "ExceptionReport", "Report")
    </div>
    <script>
        function Print(id) {
            var printContents = document.getElementById(id).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }
    </script>
